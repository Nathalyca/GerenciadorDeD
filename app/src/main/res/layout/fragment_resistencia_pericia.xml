                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/intimidacao" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox_intuicao"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_intuicao"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_intuicao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/intuicao" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="0.95">

                    <CheckBox
                        android:id="@+id/checkBox_investigacao"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_investigacao"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_investigacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/investigacao" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox_lidarAnimais"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_lidarAnimais"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_lidarAnimais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lidarAnimais" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="0.95">

                    <CheckBox
                        android:id="@+id/checkBox_medicina"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_medicina"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_medicina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicina" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox_natureza"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_natureza"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_natureza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/natureza" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="0.95">

                    <CheckBox
                        android:id="@+id/checkBox_percepcao"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_percepcao"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_percepcao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/percepcao" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox_predestinacao"
                        android:layout_width="25dp"
