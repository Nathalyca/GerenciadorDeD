                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_predestinacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/predestinacao" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="0.95">

                    <CheckBox
                        android:id="@+id/checkBox_persuasao"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_persuasao"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_persuasao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/persuasao" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/checkBox_religiao"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_religiao"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_religiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/religiao" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_weight="0.95">

                    <CheckBox
                        android:id="@+id/checkBox_sobrevivencia"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <EditText
                        android:id="@+id/field_sobrevivencia"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/text_sobrevivencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sobrevivencia" />

